<div class="form_box">
  <h3>New project</h3>

  <%= form_for @project do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="input">
          <%= f.text_field :title, autocomplete: "off", :placeholder => "Title" %>
        </div>
      </div>

      <div class="row">
        <div class="input">
          <%= f.text_field :description, autocomplete: "off", :placeholder => "Description" %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <div class="row">
        <%= f.submit "Create", :class => "button button-red" %>
      </div>
    </div>

  <% end %>
</div>